{
  "name": "car-services", 
  "version": "1.0.0", 
  "main": "main.js",
  "description": "electron-updater example project",
  "author": "Matt Haggard",
  "scripts": {
    "publish": "electron-builder -p always"
  },
  "devDependencies": {
    "electron": "^24.1.3"  
  },
  "dependencies": {
    "electron-log": "^4.4.8",
    "electron-updater": "^5.3.0"
  },
  "build": {
    "appId": "com.carsservices.tekno",
